<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	
	<modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.opentext.otsync</groupId>
        <artifactId>otsync.bundles</artifactId>
        <version>16.0.0</version>
    </parent>

    <artifactId>tempo-bundle</artifactId>
	<name>Tempo Bundle</name>

	<properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <app.properties.version>16.0.0</app.properties.version>
        <bundle.base>${project.build.directory}/${project.artifactId}-${project.version}</bundle.base>
        <bundle.zip>${bundle.base}.zip</bundle.zip>
        <bundle.otag>${bundle.base}.otag</bundle.otag>
    </properties>

	<build>
		<plugins>
            <!-- Clear down the local front end dependencies and  node/npm install -->
            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <version>3.0.0</version>
                <configuration>
                    <filesets>
                        <fileset>
                            <directory>${project.basedir}/dependencies</directory>
                            <followSymlinks>false</followSymlinks>
                        </fileset>
                    </filesets>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.10</version>
                <executions>
                    <execution>
                        <id>build tempo bundle</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>com.opentext.otsync</groupId>
                                    <artifactId>content</artifactId>
                                    <version>${app.properties.version}</version>
                                    <type>zip</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>dependencies</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.opentext.otsync</groupId>
                                    <artifactId>dcs-component</artifactId>
                                    <version>${app.properties.version}</version>
                                    <type>zip</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>dependencies</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.opentext.otsync</groupId>
                                    <artifactId>dcs</artifactId>
                                    <version>${app.properties.version}</version>
                                    <type>zip</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>dependencies</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.opentext.otsync</groupId>
                                    <artifactId>favorites-app</artifactId>
                                    <version>${app.properties.version}</version>
                                    <type>zip</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>dependencies</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.opentext.otsync</groupId>
                                    <artifactId>favorites</artifactId>
                                    <version>${app.properties.version}</version>
                                    <type>zip</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>dependencies</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.opentext.otsync</groupId>
                                    <artifactId>objectdetails-component</artifactId>
                                    <version>${app.properties.version}</version>
                                    <type>zip</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>dependencies</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.opentext.otsync</groupId>
                                    <artifactId>shares</artifactId>
                                    <version>${app.properties.version}</version>
                                    <type>zip</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>dependencies</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.opentext.otsync</groupId>
                                    <artifactId>tempohelp-app</artifactId>
                                    <version>${app.properties.version}</version>
                                    <type>zip</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>dependencies</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.opentext.otsync</groupId>
                                    <artifactId>tempo-app</artifactId>
                                    <version>${app.properties.version}</version>
                                    <type>zip</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>dependencies</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.opentext.otsync</groupId>
                                    <artifactId>tempocontent</artifactId>
                                    <version>${app.properties.version}</version>
                                    <type>zip</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>dependencies</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.opentext.otsync</groupId>
                                    <artifactId>forms-component</artifactId>
                                    <version>${app.properties.version}</version>
                                    <type>zip</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>dependencies</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.opentext.otsync</groupId>
                                    <artifactId>tempoinvitehandler</artifactId>
                                    <version>${app.properties.version}</version>
                                    <type>zip</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>dependencies</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.opentext.otsync</groupId>
                                    <artifactId>otsync-connector</artifactId>
                                    <version>${app.properties.version}</version>
                                    <type>zip</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>dependencies</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                            <!-- other configurations here -->
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>create-tempo-bundle</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <appendAssemblyId>false</appendAssemblyId>
                            <descriptors>
                                <descriptor>assembly/assembly.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- Rename the .zip  to .otag for deployment to Gateway -->
            <plugin>
                <groupId>com.coderplus.maven.plugins</groupId>
                <artifactId>copy-rename-maven-plugin</artifactId>
                <version>1.0.1</version>
                <executions>
                    <execution>
                        <id>rename-file</id>
                        <phase>package</phase>
                        <goals>
                            <goal>rename</goal>
                        </goals>
                        <configuration>
                            <sourceFile>${bundle.zip}</sourceFile>
                            <destinationFile>${bundle.otag}</destinationFile>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
		</plugins>
	</build>
    <dependencies>
        <dependency>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-clean-plugin</artifactId>
            <version>3.0.0</version>
            <type>maven-plugin</type>
        </dependency>
    </dependencies>
</project>