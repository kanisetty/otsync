<template id="page">
	<![CDATA[

		<div id="page">
			<div id="content">
				<div id="leftColumnWrapper">					
					<div id="disk"></div>					
					<div id="leftColumn"></div>
				</div>
				<div id="centerColumnWrapper">
					{{tmpl "centerColumn"}}
				</div>
				<div id="rightColumnWrapper">
					{{tmpl "rightColumn"}}
				</div>
				<div class="newLine"></div>
			</div>
		</div>
	]]>
</template>

<template id="leftColumn" >
	<![CDATA[
		<div id="leftColumn">
			</div>
	]]>
</template>
<template id="columnHead">
	<![CDATA[
		{{if isCheckAllColumn}}
			<div class="columnHeader ${classes}" id="checkAllHeader">
				<div class="columnSpacer"></div>
				<div class="itemCheckAllBox">
					<a id="checkAll" href="#" onclick="return false;"><img src="${info.repo}/img/chkbox.png" /></a>
				</div>				
			</div>
		{{else}}
			<div class="columnHeader ${classes}" id="${id}">
					<span><a href="#" onclick="return false;">${columnName}</a></span>				
				{{if id !="sizeHeader"}}
					<div class="columnSpacer"></div>
				{{/if}}
				<div class="columnSortArrow"></div>
			</div>
		{{/if}}
		
	]]>
</template>

<template id="centerColumn" >
	<![CDATA[
		<div id="centerColumn">
			<div id="toolBar">
				<div id="pageActions"></div>
				<div id="pageSearch">
					<div id="rightheadSearch">
						<label for="searchfield">${T('LABEL.SearchYourDirectory')}</label>
						<input type="text" id="searchfield" name="search" value="" placeholder="${T('LABEL.SearchYourDirectory')}" />
						<button id="searchMagIcon" type="button"></button>
					</div>
				</div>
			</div>			
			<div id="breadcrumBar" >
				<div id="breadcrumbWrapper"></div>				
				<div id="browseViewSelectors">
					<div id="sortMenu">					
						<div id="sortMenuButtonWrapper">							
							{{tmpl(ui.sortMenu()) "dropDownSort"}}
						</div>				
					</div>
					<div id="thumbnailViewSelectorWrapper" title="${T('LABEL.BrowseThumbnailView')}">
						<button id="thumbnailViewSelector" class="" type="button" name="thumbnailViewSelector"></button>
					</div>
					<div id="listViewSelectorWrapper" title="${T('LABEL.BrowseListView')}">
						<button id="listViewSelector"  class="on" type="button" name="listViewSelector"></button>
					</div>					
				</div>				
			</div>
			<div id="columnHeaderWrapper">
			</div>
			<div id="backupLevel"></div>
			<div id="contentmain">
				<div id="updatingImage" class="displayNone">
					{{tmpl "loadingImage"}}
				</div>
				<div id="itemsForFileTab">
				</div>
				<div id="itemsForSearchTab">
				</div>					
			</div>
		</div>
	]]>
</template>

<template id="rightColumn">
	<![CDATA[
		<div id="rightColumn">
			<div id="objectInfo"></div>
			<div id="searchInfo"></div>			
			<div id="accordionContainer"></div>
		</div>
	]]>
</template>

<template id="leftColumnTabItem" >
	<![CDATA[
		<div id="${tabId}" class="leftColumnTabItem" {{if tabId != "allFiles"}} style="display:none;" {{/if}}>
			<div class="leftColumnItemHeader {{if tabSelected}} selected {{/if}}">
				<div class="leftColumnIcon"><img class="leftTabIcon" src="${info.repo}/img/${tabIcon}" /></div>
				<div class="leftColumnText"><a href="#" onclick="return false;">${tabName}</a></div>
			</div>
			<div class="leftColumnItemArrow {{if tabSelected}} selected {{/if}}"></div>
		</div>			
	]]>
</template>

<template id="userActionLink">
	<![CDATA[
		 <li class="{{if last}}last{{/if}}"><a href="${url}" class="backLinks ${classes}" id="${id}">${text}</a></li>
	]]>
</template>

<template id="dialogs">
		<![CDATA[
			<div id="dialogs">
					{{tmpl(confirmationDialog) "confirmationDialogTemplate"}}
					{{tmpl(historyDialog) "historyDialogTemplate"}}
					{{tmpl(historyDialogFolder) "historyDialogFolderTemplate"}}
					{{tmpl(publishDestinationOptionDialog) "publishDestinationOptionDialogTemplate"}}
					{{tmpl(publishDialog) "publishDialogTemplate"}}
					{{tmpl(aboutDialog) "aboutDialogTemplate"}}
					{{tmpl(profilePictureAndPasswordDialog) "profilePictureAndPasswordDialogTemplate"}}
					{{tmpl(userNotificationConfigDialog) "userNotificationConfigDialogTemplate"}}
			</div>
		]]>
</template>
<template id="button">
	<![CDATA[
			<button {{if id}}id="${id}"{{/if}} class="${classes}" name="${name}" type="{{if type}}${type}{{else}}button{{/if}}" {{if tabIndex}}tabIndex="${tabIndex}"{{/if}} ><span> ${textLeft} </span>{{if img}}
			<img src="${info.repo}/img/${img}" />
			{{/if}}
			<span>${textRight}</span></button> 
	]]>
</template>
<template id="wrappedButton">
	<![CDATA[
		<div class="btn">
			<div class="btnLeft"></div>
			<div class="btnMid">
				<button {{if id}}id="${id}"{{/if}} class="${classes}" name="${name}" type="{{if type}}${type}{{else}}button{{/if}}" {{if tabIndex}}tabIndex="${tabIndex}"{{/if}} ><span> ${textLeft} </span>{{if img}}
				<img src="${info.repo}/img/${img}" />
				{{/if}}
				<span>${textRight}</span></button> 
			</div>
			<div class="btnRight"></div>
		</div>
	]]>
</template>

<template id="input">
	<![CDATA[
		
		<div class="${wrapperClasses}">
			<label  for="${id}" >${label}</label>				
			{{if textTop}}${textTop}<div class="newLine"></div>{{/if}}	
			{{if textLeft}}${textLeft}{{/if}}
			{{if instructionText}}<span class="inputInstruction">${instructionText}</span>{{/if}}				
			<input 	type="${type}" 	id="${id}" {{if classes}} class="${classes}" {{/if}} name="${name}" {{if value}}value="${value}"{{/if}} {{if placeHolder}} placeholder="${placeHolder}" {{/if}} {{if defaultChecked}} checked {{/if}} />
			<span class="${id}TextRight">${textRight}</span>
		</div>
									
	]]>
</template>

<template id="dropDownSort">
	<![CDATA[
		{{if textLeft}}<span class="dropDownTextLeft">${textLeft}</span>{{/if}}
			{{if button}}
				{{tmpl(button) "button"}}
			{{/if}}
		
			<div id="sortDropDownWrapper">
				<ul {{if id}}id="${id}"{{/if}} class="dropdown">
					<ul style="clear: both">
						{{tmpl(utils.MarkLast(options)) "dropDownOptionsSort"}}
					</ul>						
				</ul>
			</div>
	]]>
</template>

<template id="dropDown">
	<![CDATA[
		<ul {{if id}}id="${id}"{{/if}} class="dropdown ">
			<li>
			{{if button}}
				{{tmpl(button) "button"}}
			{{/if}}
			{{if href}}<a href="${href}">{{/if}}
			{{if textLeft}}<span class="dropDownTextLeft">${textLeft}</span>{{/if}}
			{{if img}}
				<img 
				{{if imgClasses}}class="${imgClasses}"{{/if}}
				src="${info.repo}/img/${img}"/>
			{{/if}}
			{{if textRight}}<span class="dropDownTextRight">${textRight}</span>{{/if}}
			{{if href}}</a>{{/if}}
			{{if options}}
				<div class="dropDownMenu">
					<div class="whiteLine"></div>
					{{if UpArrow}}
					<img src="${info.repo}/img/arrow-up.png" class="arrowUp"/>
					{{/if}}
					<ul style="clear: both">
						{{tmpl(options) "dropDownOptions"}}
					</ul>
				</div>
			{{/if}}
			</li>
		</ul>
	]]>
</template>

<template id="dropDownThumbnail">
	<![CDATA[
		<ul {{if id}}id="${id}"{{/if}} class="dropdown ">
			<li>			
			{{if href}}<a href="${href}">{{/if}}
			{{if textLeft}}<span class="dropDownTextLeft">${textLeft}</span>{{/if}}
			{{if img}}
				<img 
				{{if imgClasses}}class="${imgClasses}"{{/if}}
				src="${info.repo}/img/${img}"/>
			{{/if}}
			{{if textRight}}<span class="dropDownTextRight">${textRight}</span>{{/if}}
			{{if href}}</a>{{/if}}
			{{if options}}
				<div class="dropDownMenu">					
					{{if UpArrow}}
					<img src="${info.repo}/img/arrow-up.png" class="arrowUp"/>
					{{/if}}
					<ul style="clear: both">
						{{tmpl(options) "dropDownOptions"}}
					</ul>
				</div>
			{{/if}}
			</li>
		</ul>
	]]>
</template>

<template id="dropDownWrapped">
	<![CDATA[
		<div class="btn" {{if id}}id="${id}"{{/if}}>
			<div class="btnLeft"></div>
			<div class="btnMid">
				<ul class="dropdown ">
					<li>
					{{if button}}
						{{tmpl(button) "button"}}
					{{/if}}
					{{if href}}<a href="${href}">{{/if}}
					{{if textLeft}}<span class="dropDownTextLeft">${textLeft}</span>{{/if}}
					{{if img}}
						<img 
						{{if imgClasses}}class="${imgClasses}"{{/if}}
						src="${info.repo}/img/${img}"/>
					{{/if}}
					{{if textRight}}<span class="dropDownTextRight">${textRight}</span>{{/if}}
					{{if href}}</a>{{/if}}
					{{if options}}
						<div class="dropDownMenu">
							{{if UpArrow}}
							<img src="${info.repo}/img/arrow-up.png" class="arrowUp"/>
							{{/if}}
							<ul style="clear: both">
								{{tmpl(options) "dropDownOptions"}}
							</ul>
						</div>
					{{/if}}
					<div class="btnUnder"></div>
					</li>
				</ul>
			</div>
			<div class="btnRight"></div>
		</div>
	]]>
</template>

<template id="dropDownOptions">
	<!-- 
		This template is used by the dropdown template to render each individual 
		item in the dropdown menu.
	-->
	<![CDATA[
		<li><a {{if href}}href="${href}{{else}}href="#" onclick="return false;"{{/if}} class="${classes}">${linktext}</a></li>
	]]>
</template>

<template id="dropDownOptionsSort">
	<![CDATA[
		<li>
			<a {{if id}}id="${id}"{{/if}}   {{if href}}href="${href}{{else}}href="#" onclick="return false;"{{/if}} class="${classes}{{if last}} itemLast{{/if}}">${linktext}</a>
			<div class="sortDropdownArrow"></div>
		</li>
	]]>
</template>
	
<template id="itemTreeTemplate">
	<![CDATA[
		<div id="${wrapperID}" class="treeWrapper" title= "${wrapperTitle}"> 
			<ul id="${treeID}" class="treeList">
				<li class="root"><img src="${info.repo}/img/tempo_CS.png"/> <a class="treeRootFolder" href="#" onclick="return false;">${info.userRootFolderName}</a></li>
				<ul>
				</ul>
			</ul>
			<div class="hidden selectedBar">&nbsp;</div>
			<div class="loadingTree">
				{{tmpl "loadingImage"}}
			</div>
			<div class="errorText"> <b>${T('LABEL.Error')}</b>: ${T('LABEL.ErrorLoadingFolderTree')}</div>
			
		</div>
	]]>
</template>

<template id="usersListTemplate">
	<![CDATA[			
		<div id="usersList">
			{{if usersListData}}
			{{tmpl(usersListData) "userListShareItem"}}
			{{/if}}
	   </div>
	]]>
</template>
 
<template id="confirmationDialogTemplate">
	<![CDATA[			
		<div id="actionConfirmation" title="${title}">				
			<span id="confirmationMessage">${message}</span>			
		</div>
	]]>
</template>

<template id='loadingImage'>
	<![CDATA[
		<img src='${info.repo}/img/loading.gif' />
	]]>
</template>
<template id='notification'>
	<![CDATA[
		<div class="notification ${messageType}" id="${messageID}" >
			<div class="notificationIcon"></div>
			<div class="notificationText">${text}</div>
			<div class="notificationOperation"></div>
			<br style="clear: both" />
		</div>
	]]>
</template>
<template id='processInfo'>
	<![CDATA[
		<div class="notification processInfo" id="${messageID}" >
			<div class="notificationIcon"></div>
			<div class="notificationText">${text}</div>
			<div class="notificationPercent">${percent}</div>
			<div class="notificationOperation"></div>
			<br style="clear: both" />
		</div>
	]]>
</template>

<template id="historyItemHeaderAudit">
	<![CDATA[
		<tr class="historyRow">
			<th class="historyHeaderCell auditHistoryUser">${T('LABEL.User')}</th>
			<th class="historyHeaderCell auditHistoryEvent">${T('LABEL.Event')}</th>
			<th class="historyHeaderCell auditHistoryDate last">${T('LABEL.Date') + ' ' +T('LABEL.Modified')}</th>
		</tr>
	]]>
</template>
<template id="historyItemHeaderVersion">
	<![CDATA[
		<tr class="historyRow">
			<th class="historyHeaderCell versionHistoryNumber">#</th>
			<th class="historyHeaderCell versionHistoryFileName">${T('LABEL.Document') + '' + T('LABEL.Name') }</th>
			<th class="historyHeaderCell versionHistoryDate">${T('LABEL.Created')}</th>
			<th class="historyHeaderCell versionHistoryUser">${T('LABEL.Created') + ' ' +T('LABEL.By')}</th>
			<th class="historyHeaderCell versionHistorySize last">${T('LABEL.Size')}</th>
		</tr>
	]]>
</template>
<template id="historyItemAudit">
	<![CDATA[
		<tr class="historyRow">
			<td class="historyCell auditHistoryUser">${DisplayName}</td>
			<td class="historyCell auditHistoryEvent">${EVENTDISPLAYNAME}</td>
			<td class="historyCell auditHistoryDate">${utils.DateStringToShortDate(AUDITDATE, true)}</td>
		</tr>
	]]>
</template>
<template id="historyItemVersion">
	<![CDATA[
		<tr class="historyRow">
			<td class="historyCell versionHistoryNumber">${Number}</td>
			<td class="historyCell versionHistoryFileName"><a class="versionDownload" onclick="return false;" href="#">${FileName}</a></td>
			<td class="historyCell versionHistoryDate">${utils.DateStringToShortDate(CreateDate, true)}</td>
			<td class="historyCell versionHistoryUser">${DisplayName}</td>
			<td class="historyCell versionHistorySize">${utils.FormatFileSize(FileDataSize)}</td>
		</tr>
	]]>
</template>
<template id="historyTabHeaders">
	<![CDATA[
		<li><a href="#tab${tabName}" class="tab${tabName}Header" >${tabText}</a></li>
		<li class="tabSeparator"></li>
	]]>
</template>
<template id="historyTabContent">
	<![CDATA[
		<div id="tab${tabName}">
			<table class="historyTable">
				<thead class="historyTableHeader">
					{{if tabName === CONST_HISTORYTABS.AUDIT}}
						{{tmpl "historyItemHeaderAudit"}}
					{{/if}}
					{{if tabName === CONST_HISTORYTABS.VERSION}}
						{{tmpl "historyItemHeaderVersion"}}
					{{/if}}
				</thead>
				<tbody class="historyData${tabName}" class="historyTableBody"></tbody>
			</table>
		</div>
	]]>
</template>
<template id="historyDialogTemplate">
	<![CDATA[			
		<div id="historyView" title="${title}">
			<div class="historyContent">
				<div id="historyTabs">
					<ul>
						{{tmpl(historyTabList) 'historyTabHeaders'}}
					</ul>				
					{{tmpl(historyTabList) 'historyTabContent'}}
				</div>					
			</div>
		</div>
	]]>
</template>
<template id="historyDialogFolderTemplate">
	<![CDATA[			
		<div id="historyViewFolder" title="${T('LABEL.TabAudit')}">
			<div class="historyContent">
				<div id="historyFolderTabs">
					<ul>
						{{tmpl(historyFolderTabList) 'historyTabHeaders'}}
					</ul>				
					{{tmpl(historyFolderTabList) 'historyTabContent'}}
				</div>					
			</div>
		</div>
	]]>
</template>
<template id="publishDestinationOptionDialogTemplate">
	<![CDATA[			
		<div id="publishDestinationOptionDialogView" title="${T('LABEL.Publish')}">
			<table class="publishFileOptionTable">
				<tr>
					<td><a class="publishToFileLink" href="#" onclick="return false;">${T('LABEL.PublishInFile')}</a></td>
					<td>${T('LABEL.PublishFileText')}</td>
				</tr>
				<tr>
					<td><a class="publishToFolderLink" href="#" onclick="return false;">${T('LABEL.PublishInContainer')}</a></td>
					<td>${T('LABEL.PublishFolderText')}</td>
				</tr>
			</table>
		</div>
	]]>
</template>
<template id="publishDialogTemplate">
	<![CDATA[			
		<div id="publishDialogView" title="${T('LABEL.Publish')}">
			<div class="publishContent">
				<div class="textLeftInput publishDialogInputs">
					{{tmpl(browseCSInput) "input"}} {{tmpl(browseCSInputHidden) "input"}} {{tmpl(browseCSButton) "button"}}
					<div class="newLine"></div>
					<div class="publishOptions">
						{{tmpl(copyOption) "input"}}
						{{tmpl(moveOption) "input"}}
					</div>
				</div>
				<div id="PublishError" class="errorText "> <b>${T('LABEL.Error')}</b>: ${T('LABEL.SelectADestination')}</div>
			</div>
		</div>
	]]>
</template>
				
<template id="aboutDialogTemplate">
	<![CDATA[			
		<div id="aboutDialogView" title="${title}">				
				<div id="aboutDialogContent">
						<div class="aboutInfo productNameLogo"><img src="${info.repo}/img/tempo_wordmark.png" /></div>
						<div class="aboutInfo">${T('LABEL.WebUIVersion')}: ${webUIVersion}</div>
						<div class="aboutInfo">${T('LABEL.Repo')}: ${repoLocation}</div>
						<div class="aboutInfo">${T('LABEL.WebUIBuildDate')}: ${webUIBuildDate}</div>
						<div class="aboutInfo">${T('LABEL.APIVersion')}: <span id="apiVersion">${serverAPIVersion}</span></div>
						<div class="aboutInfo copyright">${copyrightMessage}</div>
				</div>				
		</div>
	]]>
</template>

<template id="objectInfo">
	<![CDATA[
			<div id="objectInfoWrapper">
				{{if isReadOnly}}
					<div id="objectInfoHeadingReadOnly" >
						<div id="objectInfoName">
							<div id="objectInfoNameImg"><img src="${info.repo}/img/sidebar_lock.png"></img></div>
								<div id="objectInfoNameText">${name}</div>
						</div>
					</div>
				{{else}}
					<div id="objectInfoHeading">
						<div id="objectInfoName">${name}</div>
					</div>
				{{/if}}
				{{tmpl "objectInfoDetailsTemplate"}}
				<div class="newLine"></div>
			</div>
	]]>
</template>

<template id="message">
	<![CDATA[
		<div {{if id}} id="${id}" {{/if}}class="${classes}">			
			${message}
		</div>		
	]]>
</template>

<template id="diskUsageTemplate" >
	<![CDATA[
		<div id="diskUsageWrapper">
			<div id="diskUsage">
				${T('LABEL.DiskUsed')}
				<br style="clear: both" />
				${T('LABEL.DiskUsage',$data)}
				<div id="diskProgressBar" class="diskProgressBar"></div>
			</div>
		</div>
	]]>
</template>
