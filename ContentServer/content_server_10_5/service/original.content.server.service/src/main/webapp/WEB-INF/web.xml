<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
	<servlet>
		<servlet-name>OTSyncServer</servlet-name>
		<servlet-class>com.opentext.ecm.otsync.ws.server.servlet3.OTSyncServer</servlet-class>
		<load-on-startup>1</load-on-startup>
		<async-supported>true</async-supported>
	</servlet>
	<servlet-mapping>
		<servlet-name>OTSyncServer</servlet-name>
		<url-pattern>/resources/application.wadl</url-pattern>
		<url-pattern>/BackChannel</url-pattern>
		<url-pattern>/FrontChannel</url-pattern>
		<url-pattern>/ContentChannel</url-pattern>
		<url-pattern>/ChunkedContentChannel</url-pattern>
	</servlet-mapping>
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>RESTServlet</servlet-name>
		<servlet-class>com.opentext.ecm.otsync.ws.server.rest.RESTServlet</servlet-class>
		<load-on-startup>2</load-on-startup>
		<async-supported>true</async-supported>
	</servlet>  
	<servlet-mapping>
	    <servlet-name>RESTServlet</servlet-name>
	    <url-pattern>/v3/*</url-pattern>
		<url-pattern>/v4/*</url-pattern>
  </servlet-mapping>
  	
	<mime-mapping> 
		<extension>ico</extension> 
		<mime-type>image/x-icon</mime-type> 
	</mime-mapping> 
	
  <error-page>
   <exception-type>java.lang.Throwable</exception-type>
   <location>/error.jsp</location>
 </error-page>
</web-app>